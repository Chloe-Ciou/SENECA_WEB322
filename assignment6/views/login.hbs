<div class="row">
    <div class="col-md-12">
        <h2>Log In</h2>
        <hr />
        {{#if errorMessage}}
        <div class="alert alert-danger alert-dismissible fade in" role="alert"> <strong style="color:brown">Error:</strong> {{errorMessage}} </div>
        {{/if}}
        <form method="post" action="/login">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="userName">User Name</label>
                        {{#if errorMessage}}
                        <input class="form-control" id="userName" name="userName" type="text" placeholder="User Name" required value={{userName}} />
                        {{else}}
                        <input class="form-control" id="userName" name="userName" type="text" placeholder="User Name" required value="" />
                        {{/if}}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input class="form-control" id="password" name="password" type="password" placeholder="Password" required />
                    </div>
                </div>
            </div>
            <input type="submit" class="btn btn-success pull-right" value="Login" />
        </form>
    </div>
</div>